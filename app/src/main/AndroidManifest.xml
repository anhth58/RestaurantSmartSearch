        </activity>
        <activity
            android:name=".activity.RestaurantDetailActivity"
            android:label="Detail"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.MapActivity"
            android:label="Map"
