<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="@dimen/p80dp"
        android:layout_height="@dimen/p80dp">
        <ImageView
            android:layout_width="@dimen/p60dp"
            android:layout_height="@dimen/p60dp"
            android:id="@+id/im_avatar"
            android:src="@drawable/im_avatar"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/p10dp"
        android:layout_marginLeft="@dimen/p10dp"
        android:layout_marginBottom="@dimen/p10dp"
        android:layout_marginRight="@dimen/p10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kem, chè các loại, sữa chua - Xuân Đỉnh"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:text="101/10 Xuân Đỉnh - Từ Liêm"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="4"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ăn vặt / vỉa hè"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight ="@dimen/p15dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/add_icon" />
                    <TextView
                        android:layout_marginLeft="@dimen/p5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/gray"
                        android:textSize="11sp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="@dimen/p0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_clock"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginLeft="@dimen/p5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/gray"
                    android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>