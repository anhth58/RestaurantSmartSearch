<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="@dimen/p50dp"
        android:layout_height="@dimen/p50dp"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/p15dp"
        android:src="@drawable/search_gray" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/p15dp"
        android:text="New Text"
        android:textSize="@dimen/size_text_16sp"
        android:textColor="@color/gray" />

    <ImageView
        android:id="@+id/ivFillText"
        android:layout_width="@dimen/p50dp"
        android:layout_height="@dimen/p50dp"
        android:padding="@dimen/p15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/up_left_arow" />
</LinearLayout>
